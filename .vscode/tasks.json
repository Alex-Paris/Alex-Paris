{
	"version": "2.0.0",
	"tasks": [
		{ //Start-Client (Portfolio)
      "label": "Start-Client (Portfolio)",
      "type": "shell",
      "command": "yarn",
      "args": ["start"],
      "isBackground": true,
      "options": {
        "cwd": "${workspaceFolder:Alex-Paris}/client/"
      },
      "problemMatcher":[
        {
          "pattern": [
            {
              "regexp": ".",
              "file": 1,
              "location": 2,
              "message": 3
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".",
            "endsPattern": "."
          }
        }
      ]
    },
	]
}
